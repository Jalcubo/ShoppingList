<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdroid.shoppinglist" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main_Activity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.ListProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:syncable="true" />

        <activity
            android:name=".AddList"
            android:label="@string/title_activity_add_list"
            android:parentActivityName=".Main_Activity" >
            <meta-data
                android:name="android:support.PARENT_ACTIVITY"
                android:value="com.jdroid.shoppinglist.Main_Activity" />
        </activity>
        <activity
            android:name=".DetailList"
            android:label="@string/title_activity_detail_list"
            android:parentActivityName=".Main_Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jdroid.shoppinglist.Main_Activity" />
        </activity>
    </application>

</manifest>
